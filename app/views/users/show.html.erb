<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>


  <% if @user.hosted_events.exists?%>
  <ul>
    <% @user.hosted_events.each do |h| %>
    <li> <%= h.location %>, <%= h.time %> </li>
    <% end %>
  </ul>
  <% else %>
    <p>No events hosted by  <%= @user.name %></p>
  <% end %> 


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>




<div class = "columns is-centered">
  <div class = "column is-half ">
    <%= form_with(model: event, local: true) do |form| %>
  
    
  <div class ="box has-border-colored  ">
    <div class="field">
          <%= form.label :time, class: "label has-text-lavanda is-size-2 is-size-5-desktop" %>
         <div class = "control ">
         <%= form.datetime_local_field :time, class: "input is-large is-medium-desktop  has-text-centered has-border-colored", placeholder: "Batman" %>
         
         <p class="help has-text-lavanda is-size-3 is-size-6-desktop ">Select a date, please</p>
         <br>
         <br/>
         <%= form.label :location, class: "label has-text-lavanda is-size-2 is-size-5-desktop" %>

         <%= form.text_field :location , class: "input is-size-3 is-size-6-desktop has-text-centered has-border-colored", placeholder: "Your house, maybe?" %>
         
         </div>
         <br/>
        </div>
      
        <div class="actions button-container">

          <%= form.submit "Submit", class: "button is-size-2 is-size-5-desktop  has-text-white is-fullwidth  button-is-purple" %>
        </div>
      <% end %>
    </div>
  </div>

</div> 